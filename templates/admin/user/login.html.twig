{% extends 'base.html.twig' %}

{% block title %} Identification Admin {% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-6 mx-auto">
            <div class="card bg-light text-center">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-lock"></i>
                        Connexion Administration
                    </h4>
                </div>
                <div class="card-body">
                    {% if authError %}
                        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> &nbsp; Nom d'utilisateur ou mot de passe invalide</div>
                    {% endif %}
                    <form method="POST">
                        <div class="form-group">
                            <label for="_username">Adresse E-mail</label>
                            <input type="text" class="form-control" id="_username" name="_username">
                        </div>
                        <div class="form-group">
                            <label for="_password">Mot de passe</label>
                            <input type="password" class="form-control" id="_password" name="_password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-lock-open"></i> Se Connecter
                            </button>
                            <br>
                            <a href="{{ path('home') }}" class="btn btn-link mt-2"><i class="fas fa-arrow-circle-left"></i>Retour vers le site</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
