{% block _ad_pictures_widget %}
    <p>Ajouter une ou plusieurs photos</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add_picture" class="btn btn-primary"> <i class="fa fa-images"></i>&nbsp; Ajouter une photo &nbsp;<i class="fa fa-plus"></i></button>
    </div>
{% endblock %}

{% block _ad_pictures_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_pictures_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col">
                <div class="row align-items-center">
                    <div class="col my-2">
                        {% if value %}
                            <img src="{{ value.url }}" alt="" class="img-fluid">
                        {% endif %}
                    </div>
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                    <div class="col">
                        <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger"> X </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}