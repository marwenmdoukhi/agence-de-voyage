{% extends 'admin/base.html.twig' %}

{% block title %} Admin - Edition de réservation {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification de la réversation n°: {{ booking.id }}</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.startDate) }}
            </div>
            <div class="col">
                {{ form_row(form.endDate) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.booker) }}
            </div>
            <div class="col">
                {{ form_row(form.ad) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.comment) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success">Enregistrer les modifications &nbsp; <i class="fas fa-share"></i></button>
        {{ form_end(form) }}
    </div>

{% endblock %}