{# Messages Flash #}
{% for types, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ types }}">
            {% for message in messages %}
                <p class="m-0">{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}