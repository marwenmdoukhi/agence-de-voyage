{% extends 'admin/base.html.twig' %}

{% block title %} Admin - Edition du commentaire {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du commentaire n°: {{ comment.id }}</h1>

        <div class="alert alert-info">
            <strong>Annonce liée :</strong> &nbsp; {{ comment.ad.title }} <br>
            <strong>Auteur :</strong> &nbsp; {{ comment.author.fullName }} <br>
            <strong>Date de création :</strong> &nbsp; {{ comment.createdAt | date('d/m/Y') }} <br>
            <strong>Note :</strong> &nbsp; {{ comment.rating }} <br>
        </div>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">Enregistrer les modifications &nbsp; <i class="fas fa-share"></i></button>
        {{ form_end(form) }}
    </div>

{% endblock %}